<div class="security-card text-center" id= '<%=@security.issuer.name.downcase.gsub(" ", "-")%>'>
  <div class="security-type-logo">
    <%= @security.security_type.name %>
  </div>
  <div class="description">
    <div class="security-card-header">
      <%= image_tag @security.issuer.name.downcase+"-logo.png", height: "40" , id: "logo" %>
      <p><strong>Titulo <%= @security.issuer.name %></strong></p>
    </div>
    <table class="table table-striped" id="calculations">
      <tbody>
        <tr>
          <td>Prazo até Vencimento:</td>
          <td><%= time_to_maturity %> dias</td>
        </tr>
        <tr>
          <td>CDI últimos 12 meses:</td>
          <td><%= cdi_12m %></td>
        </tr>
        <tr>
          <td>Rentabilidade Bruta (%CDI):</td>
          <td><%#= gross_profitability_cdi %></td>
        </tr>
        <tr>
          <td>CDI hoje:</td>
          <td><%= cdi %></td>
        </tr>
        <tr>
          <td>Taxa:</td>
          <td><%= (@security.rate*100.00).round(2) %>%</td>
        </tr>
        <tr>
          <td>Quantidade:</td>
          <td><%= @security.quantity %></td>
        </tr>
        <tr>
          <td>Bid:</td>
          <td><%= @bid.price %></td>
        </tr>
        <tr>
          <td>PU</td>
          <td><%= number_to_currency(@security.unit_price) %></td>
        </tr>
        <tr>
          <td>Valor Inicial</td>
          <td><%= number_to_currency(@security.value) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <button class="btn btn-navy-blue">Enviar ordem</button>
  <%#= link_to "ver mais", link_path, class: "card-link" %>
</div>
