<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <p align="center"><span class="text-logo">secondary.</span></p>

        <h2>Cadastre-se</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, label: 'Nome completo', required: true, autofocus: true %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, label: 'Senha', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: 'Confirme sua senha', required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", value: 'Criar sua conta', class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
