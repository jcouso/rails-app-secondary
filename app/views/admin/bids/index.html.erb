<style>
.offer {
background-color: #b3b3b3;
color: #666666;
padding: 10px;
margin: 15px 0;
box-shadow: 3px 3px 5px #cccccc;
border-radius: 3px;
border: 1px solid #b3b3b3;
border-radius: 3px;
position:relative;
transition: 0.2s ease;
bottom:0;
display:flex;
justify-content: space-between;
align-items: center;
}
.offer:hover {
  bottom: 1px;
  box-shadow: 3px 3px 5px #cccccc;
}



.offer p {
  font-size:15px;
  color:black;
}

.offer h3 {
  font-size: 35px;
}
.bid-title {
font-size: 30px;
  font-weight: 700;
  color: #7f7f7f;

}


#best {
  background-color: white;
  border-radius: 3px;
  box-shadow: 3px 3px 7px #cccccc;
  border-top: 4px solid #324E7B;
}

#best:hover {
  background-color: white;
  border-radius: 3px;
  box-shadow: 5px 5px 10px #cccccc;
}

#best i {
  position:absolute;

  top:-15px;
  left:-13px;
  color: #ffff66;
  font-size: 30px;
  text-shadow: 0px 0px 1px #000;
 }

 #controls {
  display:flex;
 }

 #controls .btn {
  margin:5px;
 }

 .links {
  font-size: 12px;
 }

 .btn {
height: 40px !important;
}

</style>
<br>
<%= link_to "voltar", :back, class: "links" %>
<div class="row">
  <div class="col-md-9">
    <% if @bids.empty? %>
      <h1> Seja o primeiro ate fazer um lance </h1>
    <% else %>
      <% if !@security.status.nil? %>
        <div class="bid-title">
          <h3>Titulo Vendido</h2>
            <div class="offer" id="best">
              <i class="fa fa-star" aria-hidden="true"></i>
              <ul>
                <li>Lance Ganhador: <%= number_to_currency(@bid.first.price) %></li>
              </ul>
            </div>
        </div>
      <% else %>
        <h1 class="bid-title"> </h1>
        <% bids = @bids.to_a %>
        <% best_offer = bids.shift %>

        <div class="offer" id="best">
          <i class="fa fa-star" aria-hidden="true"></i>
              <div class="offer-info">

              <% rate = number_to_percentage(((best_offer.price-@security.value)/@security.value)*100, precision: 2) %>
              <h3><%= number_to_currency(best_offer.price)%> </h3>
              <p>Lance ofrecido no <%= best_offer.created_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
              <p >Taxa sobre pre√ßo base: <span style="color:<%= rate.to_f < 0 ? "red" : "green" %>;"><%= rate %> </span></p>
              <%= %>
              </div>
              <% if current_user == @security.user %>
                <div id="controls">
                  <%= simple_form_for(["admin", @security, best_offer]) do |form| %>
                  <%= form.button :submit, "Aceitar", class: "btn btn-primary" %>
                  <% end %>
                  <%= link_to "Rejeitar", admin_security_bid_path(@security, best_offer.id), method: :delete, action: :destroy, class: "btn btn-danger" %>
               </div>
          <% end %>
        </div>

        <% bids.to_a.each do |bid| %>
          <div class="offer">
            <div class="offer-info">
              <p><%= number_to_currency(bid.price)%> - Lance ofrecido no <%= bid.created_at.strftime("%d/%m/%Y %H:%M:%S") %> - Taxa sobre base: <%= number_to_percentage(((bid.price-@security.value)/@security.value)*100, precision: 2) %> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-3">
    <%=render 'shared/security_card', security: @security, link_path: security_path(@security) %>
  </div>
</div>
