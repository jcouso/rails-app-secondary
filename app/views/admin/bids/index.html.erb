<style>
.offer {
background-color: #b3b3b3;
color: #666666;
padding: 10px;
margin: 15px 0;
box-shadow: 3px 3px 7px #cccccc;
border-radius: 10px;
border: 1px solid #b3b3b3;
border-radius: 3px;
position:relative;
transition: 0.2s ease;
bottom:0;

}
.offer:hover {
  bottom: 4px;
  box-shadow: 5px 5px 5px #cccccc;
}

.bid-title {
font-size: 30px;
  font-weight: 700;
  color: #7f7f7f;

}

#best {
  background-color: white;
  border-radius: 10px;
  box-shadow: 5px 5px 10px #cccccc;
}

#best:hover {
  background-color: white;
  border-radius: 10px;
  box-shadow: 10px 10px 12px #cccccc;
}

#best i {
  position:absolute;

  top:-15px;
  left:-13px;
  color: #ffff66;
  font-size: 30px;
  text-shadow: 0px 0px 1px #000;
 }

</style>

  <br>
  <div class="row">
    <div class="col-md-9">
    <h1 class="bid-title"> Ofertas:</h1>
      <% bids = @bids.to_a %>
      <% best_offer = bids.shift %>

      <div class="offer" id="best">
      <i class="fa fa-star" aria-hidden="true"></i>
          <ul>
            <li>Lance: <%= number_to_currency(best_offer.price) %> de <%= best_offer.buyer.email %></li>
          </ul>
          <div id="controls">
            <%= link_to "Aceitar", "#", class: "btn btn-success" %>
          </div>
        </div>

      <% bids.to_a.each do |bid| %>
        <div class="offer">
          <ul>
            <li>Lance: <%= number_to_currency(bid.price) %> de <%= bid.buyer.email %></li>
          </ul>
        </div>
      <% end %>
    </div>
    <div class="col-md-3">
      <%=render 'shared/security_card', security: @security, link_path: security_path(@security) %>
    </div>
  </div>
