<br>
<div class="main-conteiner">

  <div class="row">
      <div class="col-sm-3">
        <%= render "shared/user_card", user: current_user %>
      </div>
    <% if @securities.all.empty? %>
      <h3>Você não tem títulos cadastrados ainda<h3>
    <% else %>
    <div class="col-sm-9">
      <div class="row">
        <% @securities.each do |security| %>
          <div class="col-xs-12 col-md-6 col-lg-4">
            <%=render 'shared/security_card', security: security, link_path: admin_security_bids_path(security) %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>

</div>
